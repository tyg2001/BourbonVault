@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Bourbon Vault</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="hero mb-4">
            <div class="container hero-content">
                <div class="row align-items-center">
                    <div class="col-md-7">
                        <h1 class="display-4">Welcome to Bourbon Vault</h1>
                        <p class="lead">Your personal bourbon collection and tasting notes manager.</p>
                        <div class="d-flex flex-wrap gap-3 mt-4">
                            <a href="/collection" class="btn btn-primary btn-lg">
                                <span class="oi oi-list me-2"></span> My Collection
                            </a>
                            <a href="/tastingnotes" class="btn btn-outline-light btn-lg">
                                <span class="oi oi-book me-2"></span> Tasting Notes
                            </a>
                        </div>
                    </div>
                    <div class="col-md-5 text-center d-none d-md-block">
                        <img src="images/bourbon/placeholder-bourbon.svg" alt="Bourbon Illustration" style="max-height: 280px;" />
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-4">
            
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><span class="oi oi-list me-2 text-primary"></span> Manage Your Collection</h5>
                            <p class="card-text">Keep track of every bourbon in your collection. Add details like distillery, age, proof, and purchase information.</p>
                            <a href="/collection" class="btn btn-outline-primary">View Collection</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><span class="oi oi-book me-2 text-success"></span> Record Tasting Notes</h5>
                            <p class="card-text">Document your tasting experiences with detailed notes on appearance, nose, palate, and finish.</p>
                            <a href="/tastingnotes" class="btn btn-outline-success">View Tasting Notes</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><span class="oi oi-graph me-2 text-info"></span> Visualize Your Journey</h5>
                            <p class="card-text">Track your tasting preferences and discover patterns in your bourbon experiences over time.</p>
                            <a href="/analytics" class="btn btn-outline-info">View Analytics</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="hero mb-4">
            <div class="container hero-content">
                <div class="row align-items-center">
                    <div class="col-md-7">
                        <h1 class="display-4">Welcome to Bourbon Vault</h1>
                        <p class="lead">Track your collection, record tasting notes, and discover your palate.</p>
                        <div class="mt-3">
                            <a href="/register" class="btn btn-primary me-2">Create Account</a>
                            <a href="/login" class="btn btn-outline-light">Sign In</a>
                        </div>
                    </div>
                    <div class="col-md-5 text-center d-none d-md-block">
                        <img src="images/placeholder-600x400.svg" alt="Bourbon Illustration" class="img-fluid rounded shadow" style="max-height: 320px;" />
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-4">
            <div class="row mt-3">
                <div class="col-12">
                    <h3 class="text-center mb-4">Why Bourbon Vault?</h3>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="display-4 mb-3 text-primary">
                                <span class="oi oi-shield"></span>
                            </div>
                            <h5>Secure & Private</h5>
                            <p>Your collection data stays private with secure authentication.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="display-4 mb-3 text-success">
                                <span class="oi oi-cloud"></span>
                            </div>
                            <h5>Cloud-Based</h5>
                            <p>Access your collection from anywhere, on any device.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="display-4 mb-3 text-info">
                                <span class="oi oi-people"></span>
                            </div>
                            <h5>Community</h5>
                            <p>Share public tasting notes with other bourbon enthusiasts.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>
